{
  "manifest_version": 3,
  "name": "SignalizeAI",
  "version": "3.0.0",
  "description": "AI-powered sales insights for any website.",
  "permissions": ["activeTab", "storage", "tabs", "scripting"],
  "host_permissions": ["https://*.supabase.co/*", "https://api.signalizeai.org/*"],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "signalizeai@signalizeai.org",
      "strict_min_version": "109.0"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_title": "SignalizeAI"
  },
  "sidebar_action": {
    "default_panel": "sidepanel.html",
    "default_title": "SignalizeAI"
  },
  "content_scripts": [
    {
      "matches": ["https://signalizeai.org/*"],
      "js": ["content-auth-bridge.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["content-extractor.js"],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
