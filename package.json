{
  "name": "signalize",
  "version": "1.0.0",
  "description": "Cursor for sales pages ðŸš€",
  "main": "background.js",
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "esbuild src/sidepanel-entry.js --bundle --format=iife --minify --outfile=extension/supabase.bundle.js && esbuild sidepanel.js --bundle --platform=browser --format=esm --minify --tree-shaking=true --splitting --outdir=extension",
    "watch:supabase": "esbuild src/sidepanel-entry.js --bundle --format=iife --outfile=extension/supabase.bundle.js --watch",
    "watch:panel": "esbuild sidepanel.js --bundle --platform=browser --format=esm --minify --tree-shaking=true --splitting --outdir=extension --watch",
    "watch": "concurrently -k \"npm:watch:supabase\" \"npm:watch:panel\"",
    "dev": "concurrently -k \"npm:watch\" \"web-ext run --chromium --source-dir . --watch-file sidepanel.html --watch-file sidepanel-loader.js --watch-file sidepanel.css --watch-file sidepanel-partials/** --watch-file sidepanel-styles/** --watch-file extension/**\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@supabase/supabase-js": "^2.78.0",
    "exceljs": "^4.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.2",
    "eslint": "^10.0.0",
    "prettier": "^3.2.5",
    "web-ext": "^9.3.0"
  },
  "overrides": {
    "glob": "^10.5.0",
    "minimatch": "^10.2.1",
    "ajv": "^8.18.0",
    "rimraf": "^4.4.1"
  }
}
