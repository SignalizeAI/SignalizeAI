{
  "manifest_version": 3,
  "name": "SignalizeAI",
  "version": "1.0.0",
  "description": "AI-powered sales insights for any website.",
  "permissions": [
    "sidePanel",
    "tabs",
    "storage",
    "identity"
  ],
  "host_permissions": [
    "https://accounts.google.com/*",
    "https://*.supabase.co/*"
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "SignalizeAI"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-extractor.js"],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
