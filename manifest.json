{
  "manifest_version": 3,
  "name": "SignalizeAI",
  "version": "0.1.0",
  "description": "Turn any business website into sales-ready signals.",
  "permissions": ["sidePanel", "tabs", "storage", "identity"],
  "host_permissions": ["https://*.supabase.co/*"],
  "icons": {
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "SignalizeAI"
  }
}
